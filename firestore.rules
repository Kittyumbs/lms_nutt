rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {
    function authed() { return request.auth != null; }
    function isUser(uid) { return authed() && request.auth.uid == uid; }
    match /users/{uid} {
      allow read: if authed();
      allow create, update: if isUser(uid);
    }
  }
}
